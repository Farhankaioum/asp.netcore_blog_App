@model IndexCategoryViewModel

@{
    ViewData["Title"] = "All Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of All Categories</h2>

<a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success float-right mr-4 mb-2">Create New</a>

@*For response message*@ 
<partial name="_ActionMessage" model="@Model.Response"/>

@if (Model.Categories.Count <= 0)
{
    <h4 class="text-danger mt-3">No data found</h4>
}
else
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>

        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-success float-left mr-2">Edit</a>
                    <form method="post" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </table>
}


