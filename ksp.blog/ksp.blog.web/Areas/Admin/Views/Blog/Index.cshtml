@model BlogIndexViewModel

@{
    ViewData["Title"] = "Blog Index page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}

<table class="table" id="blog-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Descritpion</th>
            <th>Action</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Title</th>
            <th>Descritpion</th>
            <th>Action</th>
        </tr>
    </tfoot>
</table>

@section Scripts{
    <!-- DataTables -->
    <script src="/admin/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>


    <script>
        $(function () {
            $('#blog-table').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": "/Admin/Blog/GetBlogs",
                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": 2,
                        "render": function (data, type, row) {
                            return `<button type="submit" class="btn btn-info btn-sm"
                                                        onclick = "window.location.href='/admin/blogs/edit/${data}'" value = '${data}' >
                                                            <i class="fas fa-pencil-alt"></i>
                                                        Edit
                                                        </button >
                                                            <button type="submit" class="btn btn-danger btn-sm show-bs-modal" href="#"
                                                            data-id='${data}' value='${data}'>
                                                            <i class="fas fa-trash"></i>
                                                            Delete
                                                            </button>`;
                        }
                    }
                ]
            });

        });
    </script>
}
